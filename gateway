#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON="${SCRIPT_DIR}/.venv/bin/python"
CONFIG="${SCRIPT_DIR}/config.yaml"

if [[ ! -x "${PYTHON}" ]]; then
  echo "Missing .venv. Run ./onboard first."
  exit 1
fi

exec "${PYTHON}" -m researchclaw.agent "${CONFIG}"
