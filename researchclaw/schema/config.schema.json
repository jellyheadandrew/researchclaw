{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ResearchClaw V2 Config",
  "type": "object",
  "properties": {
    "base_dir": {
      "type": "string"
    },
    "messenger": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["stdio"]
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "planner": {
      "type": "object",
      "properties": {
        "use_claude": {
          "type": "boolean"
        },
        "claude_cli_path": {
          "type": "string"
        },
        "model": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["base_dir"],
  "additionalProperties": false
}
