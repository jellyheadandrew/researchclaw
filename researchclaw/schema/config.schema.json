{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ResearchClaw Config",
  "type": "object",
  "properties": {
    "base_dir": {
      "type": "string"
    },
    "messenger": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["stdio", "telegram"]
        },
        "bot_token": {
          "type": "string"
        },
        "chat_id": {
          "type": "string"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "planner": {
      "type": "object",
      "properties": {
        "use_claude": {
          "type": "boolean"
        },
        "claude_cli_path": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "web_search": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["base_dir"],
  "additionalProperties": false
}
